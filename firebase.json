{
  "firestore": {
    "rules": "./firestore/firestore.rule",
    "indexes": "./firestore/firestore.index.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
